{% extends 'base.html.twig' %}

{% block main %}


<article>

	<h1>{{ category.title }}</h1>

	<p>{{ category.description }}</p>
	<img class="category-image" src="{{ category.image }}" alt="{{ category.title }}" />
	<p>{{ category.content }}</p>
	<p>Créé le {{ category.createdAt | date()}}</p>
</article>

{% endblock main %}